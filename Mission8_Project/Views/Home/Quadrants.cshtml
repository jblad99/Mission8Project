@{
    ViewData["Title"] = "Time Management Matrix";
}
@model List<TaskForm>
<table class="table table-bordered">
    <thead>
        <tr>
            <td></td>
            <td>Urgent</td>
            <td>Non Urgent</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Important</td>
            <td>
                <div class="tl">
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.QuadrantId == 1)
                                {
                                    @if (x.Completed == false)
                                    {
                                        <tr>
                                            <td>@x.Task</td>
                                            <td>@x.DueDate</td>
                                            <td>@x.Category</td>
                                            <td><a asp-controller="Home" asp-action="Completed" asp-route-id="@x.TaskId">Completed? click here</a></td>

                                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>

                                        </tr>

                                    }
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </td>
            <td>
                <div class="tr">
                    <table class="table table-bordered">
                        <thead>Non Urgent</thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.QuadrantId == 2)
                                {
                                    @if (x.Completed == false)
                                    {
                                        <tr>
                                            <td>@x.Task</td>
                                            <td>@x.DueDate</td>
                                            <td>@x.Category</td>
                                            <td><a asp-controller="Home" asp-action="Completed" asp-route-id="@x.TaskId">Completed? click here</a></td>

                                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>

                                        </tr>

                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </td>
        </tr>
        <tr>
            <td>Non Important</td>
            <td>
                <div class="bl">
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.QuadrantId == 3)
                                {
                                    @if (x.Completed == false)
                                    {
                                        <tr>
                                            <td>@x.Task</td>
                                            <td>@x.DueDate</td>
                                            <td>@x.Category</td>
                                            <td><a asp-controller="Home" asp-action="Completed" asp-route-id="@x.TaskId">Completed? click here</a></td>

                                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>

                                        </tr>

                                    }
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </td>
            <td>
                <div class="br">
                    <table class="table table-bordered">
                        <tbody>
                            @foreach (var x in Model)
                            {
                                @if (x.QuadrantId == 4)
                                {
                                    @if (x.Completed == false)
                                    {
                                        <tr>
                                            <td>@x.Task</td>
                                            <td>@x.DueDate</td>
                                            <td>@x.Category</td>
                                            <td><a asp-controller="Home" asp-action="Completed" asp-route-id="@x.TaskId">Completed? click here</a></td>

                                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>

                                        </tr>

                                    }
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </td>
        </tr>
    </tbody>
</table>


<style>
    .tl {
        position: absolute;
        top: 100px;
        left: 10px;
        right: 50%;
        bottom: 50%;
        border: solid #000;
        border-width: 0 5px 5px 0;
    }

    .tr {
        position: absolute;
        top: 100px;
        left: 50%;
        right: 10px;
        bottom: 50%;
        border: solid #000;
        border-width: 0 0 5px 0;
    }

    .bl {
        position: absolute;
        top: 50%;
        left: 10px;
        right: 50%;
        bottom: 50px;
        border: solid #000;
        border-width: 0 5px 0 0;
    }

    .br {
        position: absolute;
        top: 50%;
        left: 50%;
        right: 10px;
        bottom: 50px;
    }
</style>