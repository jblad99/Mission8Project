@{
    ViewData["Title"] = "Time Management Matrix";
}
@model List<TaskForm>

<div class="tl">
    <table>
        <thead>Urgent</thead>
        <tbody>
            @foreach (var x in Model)
            {
                @if (x.QuadrantId == 1)
                {
                    @if (x.Completed == false)
                    {
                        <tr>
                            <td>@x.Task</td>
                            <td>@x.DueDate</td>
                            <td>@x.Category</td>
                            <td><a asp-controller="Home" asp-action="Complete" asp-route-id="@x.TaskId">Completed? click here</a></td>

                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>

                        </tr>

                    }
                }
            }
        </tbody>
    </table>
    
