<!--Confirmation page for marking a task as completed-->

@{
    ViewData["Title"] = "Completed";
}

@model TaskForm

<h2>Confirm Completion</h2>
<h3>Are you sure you completed "@Model.Task"?</h3>

<form method="post" asp-controller="Home" asp-action="Completed">
    <input type="hidden" value="true" asp-for="Completed" />
    <input type="hidden" value="@Model.Task" asp-for="Task" />
    <input type="hidden" value="@Model.QuadrantId" asp-for="QuadrantId" />
    <input type="hidden" value="@Model.DueDate" asp-for="DueDate" />
    <input type="hidden" value="@Model.CategoryId" asp-for="CategoryId" />
    <button type="submit">Confirm</button>
    <a asp-action="Quadrants" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="TaskId" />
</form>
